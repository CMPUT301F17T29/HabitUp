<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.habitup">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".View.BaseActivity" />
        <activity
            android:name=".View.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".View.SignUpActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".View.ViewHabitActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.ViewHabitEventActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.ViewFriendsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.FollowActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.FindUserActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name=".View.AddHabitActivity" />
        <activity android:name=".View.AddHabitEventActivity" />
        <activity android:name=".View.EditProfileActivity" />
        <activity android:name=".View.EditHabitActivity" />
        <activity android:name=".View.EditHabitEventActivity" />
    </application>

</manifest>