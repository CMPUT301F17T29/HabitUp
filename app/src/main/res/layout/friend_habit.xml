<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@color/whitegray"
    android:baselineAligned="false">

    <TextView
        android:id="@+id/friend_habit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Example habit name"
        android:layout_marginBottom="5dp"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <ProgressBar
        android:id="@+id/friend_habit_progress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/friend_habit_name"
        android:max="100"
        android:progress="80"
        android:scaleY="0.8"
        android:progressDrawable="@drawable/custom_progress" />

    <TextView
        android:id="@+id/friend_habit_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/friend_habit_name"
        android:layout_alignEnd="@+id/friend_habit_progress"
        android:text="12/15"
        android:textSize="15sp"/>

</RelativeLayout>