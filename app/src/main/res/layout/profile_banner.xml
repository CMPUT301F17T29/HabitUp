<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Profile Banner -->
    <RelativeLayout
        android:id="@+id/profile_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="@color/colorPrimary">

        <!-- Edit Button -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/edit_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/teal"
                android:contentDescription="Edit icon"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/ic_edit" />
            <TextView
                android:id="@+id/edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/edit_icon"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:textSize="14sp"
                android:text="@string/edit"/>
        </RelativeLayout>

        <!-- Stats button -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <ImageView
                android:id="@+id/stats_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="38dp"
                android:minHeight="38dp"
                android:tint="@color/teal"
                android:contentDescription="Profile picture"
                app:srcCompat="@drawable/ic_stats" />
            <TextView
                android:id="@+id/stats_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/stats_icon"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:textSize="14sp"
                android:text="@string/stats"/>
        </RelativeLayout>

        <!-- User Profile Picture -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/drawer_pic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:adjustViewBounds="false"
            android:src="@drawable/default_user"
            android:scaleX="1"
            android:scaleY="1"
            android:alpha="255" />

        <!-- User's display name -->
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/drawer_pic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Ken Wong"
            android:textColor="@color/whitegray"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/user_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="Level 25"
            android:textColor="@color/white"

            android:textSize="25sp"/>

        <!-- User's level progress -->
        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/user_level"
            android:max="100"
            android:progress="50"
            android:scaleY="1"
            android:progressDrawable="@drawable/custom_progress"/>

        <!-- User's level -->

        <TextView
            android:id="@+id/x_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@+id/progress_bar"
            android:layout_toLeftOf="@+id/slash"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:text="50" />
        <TextView
            android:id="@+id/slash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@+id/progress_bar"
            android:layout_toLeftOf="@+id/y_value"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:text="/" />
        <TextView
            android:id="@+id/y_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@+id/progress_bar"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:text="100" />

    </RelativeLayout>

    <!-- Attributes -->
    <LinearLayout
        android:id="@+id/attributes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/profile_banner">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="vertical"
            android:background="@color/red"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="2dp"
            android:paddingRight="5dp">

            <TextView
                android:id="@+id/attribute1_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/attribute1_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Physical"
                android:layout_below="@+id/attribute1_value"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="vertical"
            android:background="@color/purple"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="2dp"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/attribute2_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/attribute2_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mental"
                android:layout_below="@+id/attribute2_value"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="vertical"
            android:background="@color/lightblue"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:layout_marginRight="2dp"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/attribute3_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/attribute3_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Social"
                android:layout_below="@+id/attribute3_value"
                android:textColor="@color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="vertical"
            android:background="@color/green"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/attribute4_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/attribute4_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Discipline"
                android:layout_below="@+id/attribute4_value"
                android:textColor="@color/white"/>
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/today_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/attributes"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:textColor="@color/darkgray"
        android:textSize="16sp"
        android:text="@string/todays_habits"/>
    <TextView
        android:id="@+id/today_subheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/today_heading"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/lightgray"
        android:textSize="13sp"
        android:text="@string/todays_instructions"/>

</RelativeLayout>