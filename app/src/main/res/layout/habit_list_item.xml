<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@color/white"
    android:baselineAligned="false">

    <TextView
        android:id="@+id/todays_habit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Example habit name" />

    <TextView
        android:id="@+id/todays_habit_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/todays_habit_name"
        android:text="x" />
    <TextView
        android:id="@+id/slash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/todays_habit_x"
        android:layout_below="@+id/todays_habit_name"
        android:text="/"/>
    <TextView
        android:id="@+id/todays_habit_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/slash"
        android:layout_below="@+id/todays_habit_name"
        android:text="y"/>


</RelativeLayout>