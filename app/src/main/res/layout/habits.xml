<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/lib/com.app.HabitUp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.habitup.View.ViewHabitActivity"
    android:fitsSystemWindows="true">




    <LinearLayout

        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id = "@id/toolbar"
            android:layout_width = "match_parent"
            android:layout_height="wrap_content"
            app:titleTextcolor="@color/white"
            android:background="@color/colorPrimary"
            >

        </android.support.v7.widget.Toolbar>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:text="Habits" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/lightgray"
            android:textSize="12sp"
            android:text="Select a habit below" />

        <ListView
            android:id="@+id/OldHabitLists"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary">
        <Button
            android:id="@+id/add_habits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_add"
            android:text="Add Habit"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_weight="1"
            android:layout_marginTop="2dip"
            android:backgroundTint="@color/colorPrimary"
            />

        <Button
            android:id="@+id/view_habits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimary"
            android:drawableTop="@drawable/ic_view"
            android:text="View"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <Button
            android:id="@+id/edit_habits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dip"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimary"
            android:drawableTop="@drawable/ic_habit_edit"
            android:text="Edit"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/delete_habits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="2dip"
            android:drawableTop="@drawable/ic_delete"
            android:text="Delete"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorPrimary"
            />
    </LinearLayout>

</RelativeLayout>